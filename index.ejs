<script>
    // Animation des compteurs améliorée
    document.addEventListener('DOMContentLoaded', function () {
        const counters = document.querySelectorAll('#counter1, #counter2, #counter3, #counter4');
        const values = [200, 150, 50, 10]; // Valeurs ajustées
        const suffixes = ['+', '+', '+', 'k+']; // Suffixes pour chaque compteur
        const duration = 2500;

        const animateCounter = (counter, finalValue, suffix) => {
            let currentValue = 0;
            const increment = finalValue / (duration / 16);

            const updateCounter = () => {
                currentValue += increment;
                if (currentValue < finalValue) {
                    counter.textContent = Math.floor(currentValue) + suffix;
                    requestAnimationFrame(updateCounter);
                } else {
                    counter.textContent = finalValue + suffix;
                }
            };

            updateCounter();
        };

        // Observer pour déclencher l'animation quand les compteurs sont visibles
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        animateCounter(entry.target, values[index], suffixes[index]);
                    }, index * 200); // Délai échelonné pour chaque compteur
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });

        counters.forEach(counter => observer.observe(counter));
    });

    // Animation au scroll pour les cartes
    const observeCards = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                setTimeout(() => {
                    entry.target.classList.add('animate-fade-in-up');
                }, index * 100);
                observeCards.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    document.querySelectorAll('.group').forEach(card => {
        observeCards.observe(card);
    });
</script>
